
<div class= "sign-form">
    <div class= "text">
     <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>
        <h1>Sign in</h1>
    <%= form_for @user, url: registrations_path, method: :post do |f| %>
        <%= f.label :name, 'Username: ' %><br>
        <%= f.text_field :name, class: 'field'%><br>
        <%= f.label :password, 'Password: ' %><br>
        <%= f.password_field :password, class: 'field'%><br>
        <%= f.submit 'Start a game', class: 'btn-primary' %><br>
        <%= link_to 'back to primary page', root_path %>
    <% end %>
    </div>
</div>/
